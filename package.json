{
  "name": "server-template",
  "version": "1.0.0",
  "description": "A node server template.",
  "main": "index.ts",
  "scripts": {
    "start": "nodemon index.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "log4js": "^6.9.1"
  },
  "devDependencies": {
    "@swc/core": "^1.3.58",
    "@types/express": "^4.17.17",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "nodemon": "^2.0.22",
    "prettier": "2.8.8",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": { "project": ["./tsconfig.json"] },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/strict-boolean-expressions": [
            2,
            {
                "allowString" : false,
                "allowNumber" : false
            }
        ]
    },
    "ignorePatterns": []
},
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      ".gitignore",
      "node_modules/**/node_modules"
    ],
    "verbose": false,
    "execMap": {
      "ts": "ts-node"
    },
    "events": {
      "restart": "echo App restarted due to changes..."
    },
    "watch": [],
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "ts,json"
  }
}
